<h1>Public Blog Posts</h1>

<div class="row">
    {{#each blogs}}
        <div class="col s2 m6">
            <div class="card">
                <div class="card-image">
                    {{{editIcon user ../user _id}}}
                </div>
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p>{{stripTags (truncate body 50)}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="User Image">
                        <a href="/blogs/user/{{user._id}}">{{user.displayName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/blogs/{{_id}}" class="btn grey">Read More</a>
                </div>
            </div>
           
        </div>
    {{else}}
        <p>No Public Blog Posts Available</p>
    {{/each}}
</div>
